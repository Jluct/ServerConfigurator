{% extends 'JluctConfiguratorServerBundle::layout.html.twig' %}


{% block body %}
    <section class="container">
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-group">
                    <li class="list-group-item"><b>Soft name</b> - {{ data.name }}</li>
                    <li class="list-group-item"><b>Version</b> - {{ data.version }}</li>
                    <li class="list-group-item"><b>Date</b> - {{ data.date|date('d-m-Y H:i:s') }}</li>
                    <li class="list-group-item"><b>Count block</b> - {{ data.blockConfig|length }}</li>
                </ul>
            </div>
            <div class="col-sm-6">
                <h4>Description</h4>
                <p>
                    {{ data.description }}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {% for block in data.blockConfig %}
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <b>{{ block.name }}</b>
                            {% if block.required == true %}
                                <span class="label label-danger">Required</span>
                            {% endif %}
                        </div>
                        <div class="panel-body">

                            <div class="row">
                                <div class="col-sm-6"></div>
                                <div class="col-sm-6">
                                    <h4>Description</h4>
                                    <p>
                                        {{ block.description }}
                                    </p>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <tr>
                                        <td colspan="7">
                                            <a href="#" role="button" class="btn btn-success btn-block">ADD STROKE</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <th>Orders</th>
                                        <th>Type</th>
                                        <th>Requiered</th>
                                        <th>Default value</th>
                                        <th>Value</th>
                                        <th>
                                            What you want?
                                        </th>
                                    </tr>

                                    {% if block.stringConfig is not empty %}
                                        {% for string in block.stringConfig %}
                                            <tr>
                                                <td>{{ string.name }}</td>
                                                <td>{{ string.orders }}</td>
                                                <td>{{ string.type }}</td>
                                                <td>
                                                    {% if string.required %}
                                                        <span class="glyphicon glyphicon-ok"
                                                              aria-hidden="true"></span>
                                                    {% else %}
                                                        <span class="glyphicon glyphicon-minus"
                                                              aria-hidden="true"></span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ string.byDefault }}</td>
                                                <td>empty :(</td>
                                                <td>
                                                    <a href="#" role="button" class="btn btn-info" title="Reviews">
                                                        <span class="glyphicon glyphicon-eye-open"
                                                              aria-hidden="true"></span>
                                                    </a>
                                                    <a href="#" role="button" class="btn btn-warning" title="Block">
                                                        <span class="glyphicon glyphicon-remove"
                                                              aria-hidden="true"></span>
                                                    </a>
                                                    <a href="#" role="button" class="btn btn-danger" title="Delete">
                                                        <span class="glyphicon glyphicon-trash"
                                                              aria-hidden="true"></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="7">
                                                {#<a href="#" role="button" class="btn btn-success btn-block">ADD#}
                                                {#STROKE</a>#}
                                                <h3 class="text-center">Empty ):</h3>
                                            </td>
                                        </tr>
                                    {% endif %}

                                </table>
                            </div>

                            {#<ul class="list-group">#}

                            {#{% if block.stringConfig is not empty %}#}
                            {#{% for string in block.stringConfig %}#}
                            {#<li class="list-group-item">{{ string.name }}</li>#}

                            {#{% endfor %}#}
                            {#{% else %}#}
                            {#<h3>Empty ):</h3>#}
                            {#{% endif %}#}

                            {#</ul>#}

                        </div>
                        <div class="panel-footer ">

                            <h4>What you want?</h4>
                            <a href="#" role="button" class="btn btn-info" title="Reviews">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
                            <a href="#" role="button" class="btn btn-warning" title="Block">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                            <a href="#" role="button" class="btn btn-danger" title="Delete">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
